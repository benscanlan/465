<div class="row">

<div class="col-md-4">
<div style="height: 300px; overflow-y: auto;">
<div class="panel panel-default">
<!-- Default panel contents -->

<h3>Benbook Users</h3>

<table class="table">
<thead>
<tr>
<th>Name</th>
<th></th>
</tr>
</thead>
<tbody>
<% @users.each_with_index do |user, index| %>
<tr>
<td><%= index +=1 %></td>
<td><%= user.name %></td>
<td>
<%= link_to "Send Textgram", "#", class: "btn btn-success btn-xs start-chat",
"data-sid" => current_user.id, "data-rip" => user.id %>
</td>

</tr>
<% end %>

</tbody>
</table>
</div>

</div>
<hr>
<h3>Last Messaged on Benbook</h3>

<div style="height: 400px; overflow-y: auto;">
<% if @chats.any? %>
<ul class="media-list">
<% @chats.each do |chat| %>
<li class="media">

<div class="media-body">
<%= link_to "", chat_path(chat), class: "chat", "data-cid" => chat.id %>
<h4 class="media-heading"><%= chat_interlocutor(chat).name %></h4>
<p><%= chat.textgrams.last.nil? ? "No textgrams" : truncate(chat.textgrams.last.message, length: 45) %></p>
</div>
</li>

<% end %>
</ul>
<% else %>
<p>You have no chats. Click send textgram with any user to create one.</p>
<% end %>
</div>

</div>

<div class="col-md-4">

</div>

</div>
